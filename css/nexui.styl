// form stuff

.field.nex
  margin: 0 0 10px 0
  position: relative

  &.error
    border-color: #E87D7D!important

    label
      color: #E87D7D!important

      span
        display: inline

  label span
    display: none


  input[type=checkbox]
    margin-right: 5px

  input[type=text], input[type=password], textarea
    display: block

  label
    font: 9px Arial
    text-transform: uppercase
    line-height: 1.6em
    font-smoothing: antialiased
    user-select: none

  input
  textarea
    border-radius: 2px
    border-top: 1px solid #bbb
    border-right: 1px solid #ddd
    border-bottom: 1px solid #ddd
    border-left: 1px solid #ddd
    padding: 6px 5px 4px 5px
    font: 13px Arial
    vbg-gradient( #eee, #fff)
    // transition: all 0.25s ease-in-out;

  input:focus
  textarea:focus
    box-shadow: 0 0 5px rgba(0, 192, 255, 0.3);

  input[type=text], input[type=password], textarea
    width: 100%
    box-sizing: border-box

  textarea
    vbg-gradient( #eee, #fff)

  &.disabled textarea, &.disabled input
    opacity: 0.3


// inline labels
.field.nex
  &.inline
    input, textarea
      transition: box-shadow 0.15s ease-out

    label
      display: block
      font: 13px Arial
      line-height: 17px
      padding: 6px 5px 4px 5px
      color: #999
      text-transform: initial
      margin-bottom: -27px

    &.value label
      display: none


    &.large.focus,
    input:focus,
    textarea:focus,
    &.field-box
      background: white
      vbg-gradient( #f4f4f4, #fff)
      box-shadow: 0 0 5px #b6e4f0
      border-top: 1px solid #ccc
      transition: box-shadow 0.2s ease-out

// large
.field.nex
  &.large
    border-radius: 2px
    border-top: 1px solid #bbb
    border-right: 1px solid #ddd
    border-bottom: 1px solid #ddd
    border-left: 1px solid #ddd
    padding: 0
    font: 23px Arial
    vbg-gradient(#eee, #fff)

    &.center
      label, input
        text-align: center

    label
      font: 9px Arial
      line-height: 17px
      padding: 0 2px
      color: #999
      text-transform: uppercase
      position: absolute
      left: 2px
      right: 2px
      top: 0

    input, textarea, textarea
      border-radius: 0
      border: none
      margin: 8px 0 0 0
      font: 17px Arial
      background: none
      width: 100%
      font-weight: 300
      font-family: 'Helvetica Neue', HelveticaNeue, Helvetica, Arial, sans-serif

      &:focus
        border: none
        box-shadow: none

  &.center
    label, input
      text-align: center


