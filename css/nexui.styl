.nex.pane
  padding: 0
  transition: max-height 0.3s ease-out
  overflow: hidden
  max-height: 0px

  .open
    max-height: 800px

.nex.pane.black
  background: #393939
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0, #2e2e2e ), color-stop(0.05, #444 ), color-stop(0.95, #333 ), color-stop(1, #161616 ))
  color: white

.nex.pane.white
  background: #f9f9f9
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0, #d6d6d6 ), color-stop(0.05, #fff ), color-stop(0.95, #eee ), color-stop(1, #ddd ))
  color: #444

.nex.pane > .wrapper
  padding: 30px 25px