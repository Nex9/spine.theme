calc()
  if current-property
    add-property(current-property[0], s('-webkit-calc(%s)', arguments))
    add-property(current-property[0], s('-moz-calc(%s)', arguments))
    add-property(current-property[0], s('-ms-calc(%s)', arguments))
    add-property(current-property[0], s('-o-calc(%s)', arguments))
    s('calc(%s)', arguments)
  else
    error('something() must be used within a property')

