// widgets

.nexslider.carousel
  .slide
    .left-top
    .right-top
      transition: all .35s
      transform: translateX(-100%)
      opacity: 0
      transition-delay: 0.5s
      background: black
      margin: 0
      padding: 15px 15px
      font-weight: 500
      max-width: 50%
      > *
        margin: 0

    .right-top
      transition-delay: .75s
      transform: translateX(100%)
      right: 0

    .bg-dark
      background: rgba(50,50,50,0.8)
      *
        color: white
        font-weight: 400
    .bg-light
      background: rgba(245,245,245,0.8)
      *
        color: black
        font-weight: 400

  .slide.active
    .left-top
    .right-top
      transform: translateX(0)
      opacity: 1
      z-index: 1

// multiple slides
.nexslider
  .slide._2
    > .imagoimage
    > .imagovideo
      width: 50%
      transition: all 0.35s
      &:nth-child(1)
        transform: translateX(-50%)
      &:nth-child(2)
        transform: translateX(50%)
        left: 50%
  .slide.active._2
    > .imagoimage
    > .imagovideo
      transform: translateX(0)
  .slide.active._2 ~ .slide
    > .imagoimage
    > .imagovideo
      &:nth-child(1)
        transform: translateX(-50%)
      &:nth-child(2)
        transform: translateX(50%)


