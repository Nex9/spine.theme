body > .page.gallery
  .media
    .next
    .prev
      display:  block
      width:  39px
      height: 39px
      border-top:    1px solid white
      border-right:  1px solid white
      position: absolute
      z-index: 10
      top: 50%
      margin-top: -20px
      transition: all .15s
      cursor: pointer
      &:before
        content: ""
        position: absolute
        left: -2px
        top: 0px
        width:  39px
        height: 39px
        border-top:    1px solid black
        border-right:  1px solid black
    .prev
      left: -50px
      transform: rotate(225deg)
      &:hover
        transform: scale(1.2) rotate(225deg)
    .next
      right: -50px
      transform: rotate(45deg)
      &:hover
        transform: scale(1.2) rotate(45deg)

