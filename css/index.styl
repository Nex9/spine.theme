.bold
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  text-transform: uppercase
  font-size: 22px
  color: black
  line-height: normal

.fontstyle
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  line-height: normal
  color: black
  color: lighten(black, 35%)


html
body
  margin: 0
  padding: 0
  width: 100%
  // height: 100%
  background: white
  font-size: 13px

body
  @extends .fontstyle
  overflow-y: auto
  overflow-x: hidden

a
  @extends .fontstyle
  text-decoration: none

img
  border: 0
  -ms-interpolation-mode: bicubic
  vertical-align: middle

strong
  font-weight: bold

h1
h2
h3
h4
h5
h6
  @extends .bold
  color: #444
  font-weight: 200
  margin: 10px 0
  font-smoothing: antialiased

h1
  font-size: 26px
h2
  font-size: 18px
  font-weight: 400
h3
  text-transform: uppercase
  font-size: 15px
h4
  text-transform: uppercase
  font-size: 13px
  color: lighten(black, 60%)

p
li
  @extends .fontstyle
  font-smoothing: antialiased
  line-height: 17px;
  color: lighten(black, 50%)
  font-size: 15px


ul.list
  list-style-type: none;
  padding: 0px;
  margin: 10px 0px;
  list-style-position: inside
  li
    list-style-type: none
    line-height: 20px
  li:before
    content: "â€” "
    position: relative


body > div:not(.active)
  display: none

